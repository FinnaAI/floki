{
	"name": "floki",
	"productName": "Floki",
	"author": "Finna AI",
	"description": "Floki is an AI native app for running coding agents.",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "dist/main/main.js",
	"scripts": {
		"dev": "next dev",
		"build": "pnpm build:workers && next build",
		"start": "next start",
		"postinstall": "#prisma generate",
		"typecheck": "tsc --noEmit",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"db:generate": "prisma migrate dev",
		"db:migrate": "prisma migrate deploy",
		"db:push": "prisma db push",
		"db:studio": "prisma studio",
		"electron:dev": "cross-env NODE_ENV=development concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"pnpm dev\" \"wait-on tcp:3000 && tsc -p electron-builder.tsconfig.json && electron .\"",
		"electron:build": "pnpm rebuild node-pty && tsc -p electron-builder.tsconfig.json && next build && electron-builder",
		"electron:compile": "tsc -p electron-builder.tsconfig.json",
		"build:workers": "tsc -p tsconfig.worker.json && echo 'Workers built successfully!'",
		"watch:workers": "tsc -p tsconfig.worker.json --watch",
		"watch:workers:dev": "tsc -p tsconfig.worker.json --watch --noEmitOnError > /dev/null 2>&1"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.7.0",
		"@prisma/client": "^6.5.0",
		"@radix-ui/react-avatar": "^1.1.7",
		"@radix-ui/react-checkbox": "^1.2.2",
		"@radix-ui/react-collapsible": "^1.1.8",
		"@radix-ui/react-context-menu": "^2.2.12",
		"@radix-ui/react-dialog": "^1.1.10",
		"@radix-ui/react-dropdown-menu": "^2.1.11",
		"@radix-ui/react-label": "^2.1.4",
		"@radix-ui/react-scroll-area": "^1.2.5",
		"@radix-ui/react-select": "^2.2.2",
		"@radix-ui/react-separator": "^1.1.4",
		"@radix-ui/react-slider": "^1.3.2",
		"@radix-ui/react-slot": "^1.2.0",
		"@radix-ui/react-switch": "^1.2.2",
		"@radix-ui/react-tabs": "^1.1.8",
		"@radix-ui/react-tooltip": "^1.2.3",
		"@shikijs/monaco": "^3.3.0",
		"@t3-oss/env-nextjs": "^0.12.0",
		"@tiptap/extension-document": "^2.11.7",
		"@tiptap/extension-paragraph": "^2.11.7",
		"@tiptap/extension-text": "^2.11.7",
		"@tiptap/pm": "^2.11.7",
		"@tiptap/react": "^2.11.7",
		"@tiptap/starter-kit": "^2.11.7",
		"ai": "^4.3.10",
		"bufferutil": "^4.0.9",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"electron-serve": "^2.1.1",
		"lucide-react": "^0.503.0",
		"marked": "^15.0.11",
		"monaco-themes": "^0.4.4",
		"motion": "^12.7.5",
		"next": "^15.2.3",
		"next-themes": "^0.4.6",
		"node-pty": "^1.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-resizable-panels": "^2.1.8",
		"react-tweet": "^3.2.2",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.2.0",
		"tw-animate-css": "^1.2.8",
		"utf-8-validate": "^6.0.5",
		"ws": "^8.18.1",
		"xterm": "^5.3.0",
		"xterm-addon-fit": "^0.8.0",
		"xterm-addon-web-links": "^0.9.0",
		"zod": "^3.24.2",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/postcss": "^4.0.15",
		"@types/node": "^20.17.30",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@types/react-syntax-highlighter": "^15.5.13",
		"@types/ws": "^8.18.1",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"electron": "^35.2.0",
		"electron-builder": "^26.0.12",
		"postcss": "^8.5.3",
		"prisma": "^6.5.0",
		"shiki": "^3.3.0",
		"tailwindcss": "^4.0.15",
		"typescript": "^5.8.2",
		"wait-on": "^8.0.3",
		"worker-loader": "^3.0.8"
	},
	"ct3aMetadata": {
		"initVersion": "7.39.3"
	},
	"packageManager": "pnpm@10.8.1",
	"build": {
		"appId": "com.floki.app",
		"productName": "Floki",
		"directories": {
			"output": "dist"
		},
		"files": [
			"dist/**/*",
			"out/**/*"
		],
		"mac": {
			"category": "public.app-category.developer-tools"
		}
	}
}
